{{!< default}}
{{> header}}
<section class="main" role="main">
{{#post}}
<article role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader">
<time datetime="{{date format="DD.MM.YYYY"}}" itemprop="datePublished">{{date format='DD.MM.YYYY'}}</time>
<h1 itemprop="headline">{{title}}</h1>
</header>
{{content}}
{{#if tags}}
<div class="tags">
Tags: {{tags separator=" | "}}
</div>
{{/if}}
    <div class="share">
    <h4>Share this post:</h4>
    <a class="icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_uber">Twitter</span></a>
    <a class="icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_uber">Facebook</span></a>
    <a class="icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_uber">Google+</span></a>
    </div>
        {{#if author}}
        <footer>
        <address itemscope itemtype="http://schema.org/Person">
        {{#if author.image}}
        <div><img src="{{author.image}}" itemprop="image" /></div>
        {{/if}}
        <h4 itemprop="author">{{author.name}}</h4>
        {{#if author.website}}
        <div><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
        {{/if}}
        </address>
        <div>
        <p>{{author.bio}}</p>
        </div>
        </footer>
        {{/if}}
</article>
{{/post}}
{{#if pagination}}
<div class="pagination">
{{{pagination}}}
</div>
{{/if}}
</main>
{{> footer}}